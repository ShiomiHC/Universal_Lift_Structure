<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef Name="ULS_HiddenBuildingBase" ParentName="BuildingBase" Abstract="True">
        <label />
        <description />

        <!--绘制类型-->
        <drawerType>None</drawerType>

        <!--是否可选中-->
        <selectable>false</selectable>

        <!--是否掉落资源-->
        <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>

        <!--是否参与血量逻辑-->
        <useHitPoints>false</useHitPoints>

        <!--tickerType：Tick 频率-->
        <tickerType>Never</tickerType> <!--外部-->
    </ThingDef>

    <ThingDef ParentName="ULS_HiddenBuildingBase">
        <!--
        📌 defName：唯一标识符
           - C# 中通过 ULS_ThingDefOf.ULS_LiftBlocker 引用
        -->
        <defName>ULS_LiftBlocker</defName>

        <!--通行性-->
        <passability>Impassable</passability>

        <building>
            <!--阻挡建筑-->
            <isEdifice>true</isEdifice>
        </building>
    </ThingDef>
</Defs>