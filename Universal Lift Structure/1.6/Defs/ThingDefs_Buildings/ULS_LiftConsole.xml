<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <!-- 升降控制台 -->
    <ThingDef ParentName="BuildingBase">
        <defName>ULS_LiftConsole</defName>
        <label />
        <description />
        <graphicData>
            <texPath>Things/Building/Misc/ULS_Console</texPath>

            <!-- Graphic_Single：单张贴图
               - Graphic_Multi：多方向贴图
               - Graphic_Random：随机贴图-->
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>(1,1.5)</drawSize>
            <drawOffset>(0,0,0.25)</drawOffset>
        </graphicData>
        <uiIconPath>Things/Building/Misc/ULS_Console</uiIconPath>
        <size>(1,1)</size>
        <statBases>
            <WorkToBuild>800</WorkToBuild>
            <MaxHitPoints>200</MaxHitPoints>
            <Flammability>0.3</Flammability>
            <MarketValue>120</MarketValue>
        </statBases>

        <!--成本-->
        <costList>
            <!--<材料>数量-->
            <Steel>60</Steel>
            <ComponentIndustrial>2</ComponentIndustrial>
        </costList>

        <!--建造菜单分类 -->
        <designationCategory>Misc</designationCategory>
        <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
        <comps>
            <!-- CompProperties_Power：电力组件 -->
            <li Class="CompProperties_Power">
                <!-- CompPowerTrader：消耗电力
                   - CompPowerPlant：产生电力-->
                <compClass>CompPowerTrader</compClass>

                <!-- 基础电力消耗 -->
                <basePowerConsumption>50</basePowerConsumption>
            </li>

            <!-- 默认允许指定关闭电源 -->
            <li Class="CompProperties_Flickable" />

            <!--自定义组件-->
            <li Class="Universal_Lift_Structure.CompProperties_LiftConsole" />
        </comps>
    </ThingDef>
</Defs>