<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <!-- 文件意图：升降控制台（Console 模式下的操作目标）。
         说明：不添加研究前置/建造条件（开发测试占位）；实际升降由本 Mod 的请求队列 + 原版 flick 派工触发。 -->

    <ThingDef ParentName="BuildingBase">
        <defName>ULS_LiftConsole</defName>
        <thingClass>Building</thingClass>
        <category>Building</category>
        <!-- 名称/描述留空，使用 DefInjected 本地化 -->
        <label/>
        <description/>

        <graphicData>
            <!-- 临时占位贴图：复用原版 CommsConsole 贴图路径（若未来替换资源，可改为自有贴图）。 -->
            <texPath>Things/Building/Misc/CommsConsole</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>(1,1)</drawSize>
        </graphicData>
        <uiIconPath>Things/Building/Misc/CommsConsole</uiIconPath>

        <size>(1,1)</size>

        <statBases>
            <!-- 〇：开发测试占位数值 -->
            <WorkToBuild>800</WorkToBuild>
            <MaxHitPoints>200</MaxHitPoints>
            <Flammability>0.3</Flammability>
            <MarketValue>120</MarketValue>
        </statBases>

        <costList>
            <Steel>60</Steel>
            <ComponentIndustrial>2</ComponentIndustrial>
        </costList>

        <designationCategory>Structure</designationCategory>
        <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>

        <comps>
            <!-- 电力：常规待机 20W。Flick 请求改由控制器的代理触发，避免本体被 flick 断电。 -->
            <li Class="CompProperties_Power">
                <compClass>CompPowerTrader</compClass>
                <basePowerConsumption>20</basePowerConsumption>
            </li>
            <!-- flick 触发器：Pulse 版本隐藏开关 Gizmo。 -->
            <li Class="Universal_Lift_Structure.ULS_Properties_FlickablePulse" />
            <li Class="Universal_Lift_Structure.CompProperties_ULS_FlickTrigger" />
        </comps>
    </ThingDef>
</Defs>
